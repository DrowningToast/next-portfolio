{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@public/*": ["public/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@system/*": ["src/System/*"],
      "@redux/*": ["src/System/Redux/*"],
      "@fbase/*": ["src/System/Firebase/*"],
      "@api/*": ["src/System/api/*"],
      "@polyfills": ["components/polyfills/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/r3f/Scenes/Hero.tsx",
    "components/utils/EditorJSPluginExports.js"
  ],
  "exclude": ["node_modules"]
}
